<%= content_for :page_title do %>
  <h1 class="page__title">Partners</h1>
<% end %>
<%= content_for :breadcrumbs do %>
  <%= breadcrumb("Partners") %>
<% end %>

<main class="main">
  <div class="partners-page page">
    <% @partners.each do |partner| %>
      <div class="partners-page__partner">
        <div class="u-pull-left partners__image partners__image--large">
          <%= image_tag partner.logo.url(:medium) %>
        </div>
        <p class="partners__name"><%= partner.name %></p>
        <div class="partners__description"><%= raw partner.description %></div>
        <%= link_to partner.url, target: "_blank" do %>
          <p class="partners__link page__aside-link">View website ></p>
        <% end %>
      </div>
    <% end %>
  </div>
</main>
