<li id="<%= dom_id(aichi_goal) %>">
  <div class="item">
    <div class="btn-group btn-group-sm">
      <%= link_to t('.edit'), edit_admin_aichi_goal_path(aichi_goal), :class => 'btn btn-default' %>
      <%= link_to t('.delete'), admin_aichi_goal_path(aichi_goal), method: :delete, :class => 'btn btn-default' %>
    </div>
    <div class="item-content">
      <div class="item-title">
        <%= link_to aichi_goal.name, edit_admin_aichi_goal_path(aichi_goal) %>
      </div>
      <div class="item-meta">
        <strong>Name:</strong> <%= aichi_goal.name %><br>
        <strong>Description:</strong> <p><%= aichi_goal.description %></p>
      </div>
    </div>
  </div>
</li>

