<li id="<%= dom_id(tag) %>">
  <div class="item">
    <div class="btn-group btn-group-sm">
      <%= link_to t('.edit'), edit_admin_tag_path(tag), :class => 'btn btn-default' %>
      <%= link_to t('.delete'), admin_tag_path(tag), method: :delete, :class => 'btn btn-default' %>
    </div>
    <div class="item-content">
      <div class="item-title">
        <%= link_to tag.name, edit_admin_tag_path(tag) %>
      </div>
    </div>
  </div>
</li>

