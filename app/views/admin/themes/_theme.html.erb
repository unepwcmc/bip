<li id="<%= dom_id(theme) %>">
  <div class="item">
    <div class="btn-group btn-group-sm">
      <%= link_to t('.edit'), edit_admin_theme_path(theme), :class => 'btn btn-default' %>
      <%= link_to t('.delete'), admin_theme_path(theme), method: :delete, :class => 'btn btn-default' %>
    </div>
    <% if theme.logo.present? %>
      <%= image_tag theme.logo.url(:thumb), style: "float: left; width: 50px" %>
    <% end %>
    <div class="item-content">
      <div class="item-title">
        <%= link_to theme.name, edit_admin_theme_path(theme) %>
      </div>
      <div class="item-meta">
        <strong>Name:</strong> <%= theme.name %> <br>
        <strong>Description:</strong> <p><%= theme.description %></p>
      </div>
    </div>
  </div>
</li>

