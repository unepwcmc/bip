<li id="<%= dom_id(sdg_target) %>">
  <div class="item">
    <div class="btn-group btn-group-sm">
      <%= link_to t('.edit'), edit_admin_sdg_target_path(sdg_target), :class => 'btn btn-default' %>
      <%= link_to t('.delete'), admin_sdg_target_path(sdg_target), method: :delete, :class => 'btn btn-default' %>
    </div>
    <% if sdg_target.logo.present? %>
      <%= image_tag sdg_target.logo.url(:thumb), style: "float: left; width: 50px" %>
    <% end %>
    <div class="item-content">
      <div class="item-title">
        <%= link_to sdg_target.name, edit_admin_sdg_target_path(sdg_target) %>
      </div>
      <div class="item-meta">
        <strong>Target number:</strong> <%= sdg_target.target_number %><br>
        <strong>Name:</strong> <%= sdg_target.name %><br>
        <strong>SDG Goal:</strong> <%= sdg_target.sdg_goal.try(:name) %> <br>
        <strong>Description:</strong> <p><%= sdg_target.description %></p>
      </div>
    </div>
  </div>
</li>

