<%= comfy_form_for @sdg_goal, url: {action: action} do |f| %>
  <%= f.text_field :name %>
  <%= f.text_area :description %>
  <%= f.file_field :logo %>

  <%= f.form_group :class => 'form-actions' do %>
    <%= f.submit "#{action.titleize}", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel'), admin_sdg_goals_path, :class => 'btn btn-link' %>
  <% end %>
<% end %>

