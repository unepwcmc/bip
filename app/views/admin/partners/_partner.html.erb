<li id="<%= dom_id(partner) %>">
  <div class="item">
    <div class="btn-group btn-group-sm">
      <%= link_to t('.edit'), edit_admin_partner_path(partner), :class => 'btn btn-default' %>
      <%= link_to t('.delete'), admin_partner_path(partner), method: :delete, :class => 'btn btn-default' %>
    </div>
    <% if partner.logo.present? %>
      <%= image_tag partner.logo.url(:thumb), style: "float: left; width: 50px" %>
    <% end %>
    <div class="item-content">
      <div class="item-title">
        <%= link_to partner.name, edit_admin_partner_path(partner) %>
      </div>
      <div class="item-meta">
        <strong>Name:</strong> <%= partner.name %><br>
        <strong>URL:</strong> <a href="<%= partner.url %>"><%= partner.url %></a><br>
        <strong>Partner Type:</strong> <%= partner.partner_type&.name %>
      </div>
    </div>
  </div>
</li>

