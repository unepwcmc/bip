<%= comfy_form_for @partner, url: {action: action} do |f| %>
  <%= f.text_field :name %>
  <%= f.select :partner_type_ids, PartnerType.all.map { |p| [p.name, p.id] }, {}, {multiple: true, class: "js-select2 u-full-width"} %>
  <%= f.url_field :url %>
  <%= f.text_area :description, data: {"custom-rich-text" => true} %>
  <%= f.file_field :logo %>
  <%= f.form_group do %>
    <% if @partner.logo.present? %>
      <%= image_tag @partner.logo.url(:thumb) %>
    <% end %>
  <% end %>

  <%= f.form_group :class => 'form-actions' do %>
    <%= f.submit "#{action.titleize}", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel'), admin_partners_path, :class => 'btn btn-link' %>
  <% end %>
<% end %>

