<div class="pagination">
  <div class="pagination__per-page">
    <span class="pagination__per-page-text">Results per page:</span>
    <div class="select-wrapper select-wrapper--hug select-wrapper--square">
      <select data-per-page-selector>
        <option <%= "selected" if per_page == 10 %> value="10">10</option>
        <option <%= "selected" if per_page == 20 %> value="20">20</option>
        <option <%= "selected" if per_page == 30 %> value="30">30</option>
        <option <%= "selected" if per_page == 40 %> value="40">40</option>
        <option <%= "selected" if per_page == 50 %> value="50">50</option>
      </select>
    </div>
  </div>

  <div class="pagination__navigation">
    <span class="pagination__page-count-text">
      (Currently viewing Page <%= current_page %> of <%= total_pages %>)
    </span>

    <% if page_index > 0 %>
      <a
        href="<%= url_for(params.merge(page: page_index-1)) %>"
        class="pagination__navigation-control pagination__navigation-control--backwards"
      ></a>
    <% end %>

    <% if to + 1 < total_results %>
      <a
        href="<%= url_for(params.merge(page: page_index+1)) %>"
        class="pagination__navigation-control pagination__navigation-control--forwards"
      ></a>
    <% end %>
  </div>
</div>
