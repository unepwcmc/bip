<%= content_for :breadcrumbs do %>
  <%= breadcrumb "Search" %>
<% end %>

<main class="main">
  <h1 class="page__title">
    <span class="page__title--thin">Search results for:</span>
    <strong><%= params[:q] %></strong>
  </h1>

  <div class="page">
    <div class="page__body">
      <p class="search-page__summary">Showing <%= @from + 1 %>-<%= @to + 1 %> of <%= @results&.size || 0 %> results found.</p>
      <%= render "search_results" %>
      <%= render "pagination" %>
    </div>

    <%= render "filters" %>
  </div>
</main>
