<% (@results || []).each do |result| %>
  <div class="search-page__result">
    <div class="search-page__result-container">
      <h2 class="search-page__result-title">
        <%= result_label(result) %>
      </h2>

      <div class="search-page__result-text">
        <%= search_result(result, params[:q]) %>
      </div>

      <%= link_to result_url(result), class: "search-page__result-link" do %>
        <%= result_link_text %>
        <i class="icon--right icon--link"></i>
      <% end %>
    </div>
  </div>
<% end %>
