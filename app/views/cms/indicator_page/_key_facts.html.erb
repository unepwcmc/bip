<div class="page__aside-section">
  <h2 class="page__aside-section-title">Key indicator facts</h2>

  <div class="u-only-print u-half">
    <h3 class="fact__subtitle">Indicator type</h3>
    <p class="fact__value"><%= @cms_page.indicator_type&.name || "N/A" %></p>

    <h3 class="fact__subtitle">Applicable for national use</h3>
    <p class="fact__value">
      <% if @cms_page.applicable_for_national_use %>
        Yes <a href="#national_use" data-toggle-alternate-trigger="national-use">(find out more)</a>
      <% else %>
        No
      <% end %>
    </p>

    <h3 class="fact__subtitle">Indicator classification</h3>
    <p class="fact__value"><%= @cms_page.indicator_classification&.name || "N/A" %></p>
  </div>

  <div class="u-hide-print">
    <h3 class="fact__subtitle">Indicator type</h3>
    <p class="fact__value"><%= @cms_page.indicator_type&.name || "N/A" %></p>

    <h3 class="fact__subtitle">Applicable for national use</h3>
    <p class="fact__value">
      <% if @cms_page.applicable_for_national_use %>
        Yes <a href="#national_use" data-toggle-alternate-trigger="national-use">(find out more)</a>
      <% else %>
        No
      <% end %>
    </p>

    <h3 class="fact__subtitle">Indicator classification</h3>
    <p class="fact__value"><%= @cms_page.indicator_classification&.name || "N/A" %></p>
  </div>

  <h3 class="fact__subtitle">Last update</h3>
  <p class="fact__value"><%= @cms_page.last_update&.year || "N/A" %></p>

  <h3 class="fact__subtitle">Coverage</h3>
  <p class="fact__value"><%= @cms_page.coverage&.name || "N/A" %></p>

  <h3 class="fact__subtitle">Availability</h3>
  <p class="fact__value">
    <% if @cms_page.freely_available %>
      <%= link_to "Data freely available", @cms_page.available_link %>
    <% else %>
      Data available on request
    <% end %>
  </p>

  <div class="u-hide-print">
    <h3 class="fact__subtitle">Download</h3>
    <p class="fact__value">
      <%= link_to "Download this page as a PDF", download_path(page: @cms_page.slug) %>
    </p>
  </div>
</div>
